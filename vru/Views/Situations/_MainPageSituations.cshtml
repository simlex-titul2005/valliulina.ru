@model VMSituation[]
@{
    VMSituation item;
}

@if(Model.Any())
{
    <h3 class="home-page__situations-header">Примеры ситуаций, в которых я могу Вам помочь:</h3>
    <ul class="list-unstyled">
        @for (int i = 0; i < Model.Length; i++)
        {
            item = Model[i];
            <li class="hp-sutiation">
                <i class="fa fa-angle-right hp-sutiation__arrow" aria-hidden="true"></i> @item.Text
            </li>
        }
    </ul>
}