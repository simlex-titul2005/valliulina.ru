@model VMCategory[]
@{
    VMCategory item;
}

@if (Model.Any())
{
    <ul class="list-unstyled categories">
        @for (int i = 0; i < Model.Length; i++)
        {
            item = Model[i];
            <li @(item.IsCurrent?"class=active":null)>
                <i class="fa fa-angle-right hp-sutiation__arrow" aria-hidden="true"></i> <a href="@item.Url">@item.Title</a>
            </li>
        }

        <li>
            <i class="fa fa-angle-right hp-sutiation__arrow" aria-hidden="true"></i> <a href="@Url.Action("Index","Articles")">Все статьи</a>
        </li>
    </ul>
}
