@model VMCategory[]
@{
    VMCategory item;
    SxVMMaterialCategory cat = ViewContext.ParentActionViewContext.ViewBag.Category;
}

@if (Model.Any())
{
    <ul class="list-unstyled categories">
        <li class="@(cat==null?"active":null)">
            <i class="fa fa-angle-right hp-sutiation__arrow" aria-hidden="true"></i> <a href="@Url.Action("Index","Articles")">Все материалы</a>
        </li>
        @for (int i = 0; i < Model.Length; i++)
        {
            item = Model[i];
            <li class="@(item.IsCurrent ? "active" : null)">
                <i class="fa fa-angle-right hp-sutiation__arrow" aria-hidden="true"></i> <a href="@item.Url">@item.Title</a>
            </li>
        }
    </ul>
}
