@model SxVMLogin
@{
    ViewBag.Title = ViewBag.Title ?? "Вход";
    ViewBag.H1 = ViewBag.H1 ?? ViewBag.Title;
}
@section intro{
}
<form method="post" action="@Url.Action("Login","Account")" autocomplete="off" class="login-form">
    <h2>Используйте учетную запись для входа</h2>
    <hr />
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Адрес электронной почты" } })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите пароль" } })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Войти</button>
    </div>
</form>
@section scripts{
    <script src="@Url.Action("Js", "StaticContent", new { name="jquery.validate"})"></script>
    <script src="@Url.Action("Js", "StaticContent", new { name="jquery.validate.unobtrusive"})"></script>
}