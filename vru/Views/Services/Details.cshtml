@model VMService
@{
    ViewBag.Title = ViewBag.Title ?? Model.Title;
    ViewBag.H1 = ViewBag.H1 ?? ViewBag.Title;
}
@section intro{
}
<div class="service-details">
    <div class="service-details__html">
        @Html.Raw(Model.Html)
    </div>
    @if (!string.IsNullOrEmpty(Model.Duration))
    {
        <div class="service-details__duration">
            Продолжительность: <strong>@Model.Duration</strong>
        </div>
    }
    <div class="service-details__duration">
        Стоимость: <strong>@(Model.Cost ?? "По договоренности")</strong>
    </div>
    @*<hr />
    <h2>Записаться</h2>
    <div id="question">
        @Html.Action("Add", "Questions")
    </div>*@
</div>
@section scripts{
    <script src="@Url.Action("Js", "StaticContent", new { name="jquery.validate"})"></script>
    <script src="@Url.Action("Js", "StaticContent", new { name="jquery.validate.unobtrusive"})"></script>
    <script src="@Url.Action("Js", "StaticContent", new { name="jquery.unobtrusive-ajax"})"></script>
}