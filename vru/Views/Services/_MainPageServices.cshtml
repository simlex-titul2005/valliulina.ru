@model VMService[]
@{
    VMService item;
    string html;
}

@if (Model.Any())
{
    <div class="row">
        @for (int i = 0; i < Model.Length; i++)
        {
            item = Model[i];
            html = UrlHelperExtensions.CleanHtml(item.Html, 250);
            <div class="col-md-4">
                <div class="hp-services-item">
                    <h2 class="hp-services-item__title">@item.Title</h2>
                </div>
                <div class="hp-services-item__html">
                    @html
                </div>
                <div class="hp-services-item__btn">
                    @if (i < Model.Length-1)
                    {
                        <a href="@Url.Action("Details", "Services", new { titleUrl = item.TitleUrl })" class="btn btn-sm btn-transparent green">
                            Подробнее <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        </a>
                    }
                    else
                    {
                        <div class="btn-group btn-group-sm">
                            <a href="@Url.Action("Details", "Services", new { titleUrl = item.TitleUrl })" class="btn btn-sm btn-transparent green">
                                Подробнее <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Index", "Services")" class="btn btn-sm btn-transparent green">
                                Все услуги <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
