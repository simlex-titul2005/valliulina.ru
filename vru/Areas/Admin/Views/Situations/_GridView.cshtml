@model VMSituation[]

@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMSituation>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMSituation>[]{
                new SxExtantions.SxGridViewColumn<VMSituation>{FieldName="Text", Caption="Заголовок"}
            },
            EnableCreating = true,
            CreateRowUrl = Url.Action("Edit", "Situations"),
            EnableEditing = true,
            EditRowUrl = x => { return Url.Action("Edit", "Situations", new { id = x.Id }); },
            DataAjaxUrl = Url.Action("Index", "Situations"),
            ShowPagerInfo = true
        }
    )