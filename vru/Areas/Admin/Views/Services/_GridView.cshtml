@model VMService[]


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMService>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMService>[]{
                new SxExtantions.SxGridViewColumn<VMService>{FieldName="Title", Caption="Заголовок"},
                new SxExtantions.SxGridViewColumn<VMService>{FieldName="Html", Caption="Описание", Template=x=> { return Html.Raw(x.Html).ToString(); } },
                new SxExtantions.SxGridViewColumn<VMService>{FieldName="Duration", Caption="Продолжительность"},
                new SxExtantions.SxGridViewColumn<VMService>{FieldName="Cost", Caption="Стоимость"}
            },
            EnableCreating = true,
            CreateRowUrl = Url.Action("Edit", "Services"),
            EnableEditing = true,
            EditRowUrl = x => { return Url.Action("Edit", "Services", new { id = x.Id }); },
            DataAjaxUrl = Url.Action("Index", "Services"),
            ShowPagerInfo = true
        }
    )