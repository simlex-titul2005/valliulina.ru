@model SxVM301Redirect[]
@{
    Layout = null;
}


@Html.SxGridView(Model,
            new SxExtantions.SxGridViewSettings<SxVM301Redirect>
            {
                Columns = new SxExtantions.SxGridViewColumn<SxVM301Redirect>[]{
                    new SxExtantions.SxGridViewColumn<SxVM301Redirect>{FieldName="OldUrl", Caption="Старый адрес"},
                    new SxExtantions.SxGridViewColumn<SxVM301Redirect>{FieldName="NewUrl", Caption="Новый адрес"}
                },
                EnableCreating = true,
                CreateRowUrl = Url.Action("Edit", "Redirects"),
                EnableEditing = true,
                EditRowUrl = x => { return Url.Action("Edit", "Redirects", new { id = x.Id }); },
                DataAjaxUrl = Url.Action("Index", "Redirects"),
                ShowPagerInfo = true
            }
    )