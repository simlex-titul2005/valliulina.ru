@model SxVMPicture[]
@{
    ViewBag.Title = "Фото-контент";
}
@section styles{
    <link href="~/Areas/Admin/content/dist/css/lightbox.min.css" rel="stylesheet" />
    <style>
        #grid tbody > tr > td:last-child {
            text-align: center;
            vertical-align: middle;
        }
    </style>
}

<h2>@ViewBag.Title</h2>
<div class="alert alert-warning">
    <strong>Внимание!</strong> При добалении изображений не допускайте разрастания базы данных. Размер добавляемого файла не должен превышать <b>150 kB</b>. Перед добавлением рекомендуется сжать изображение специализированным online-сервисом (например <a href="http://resizepiconline.com" rel="nofollow" target="_blank"><b>http://resizepiconline.com</b></a>)
</div>
<div id="grid">
    @Html.Partial("_GridView", Model)
</div>
@section scripts{
    <script src="~/Areas/Admin/content/dist/js/lightbox.min.js"></script>
    <script>
        $(function () {
            $('#grid').sx_gv();
        });
    </script>
}