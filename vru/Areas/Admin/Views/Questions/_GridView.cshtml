@model VMQuestion[]


@Html.SxGridView(Model,
        new SxExtantions.SxGridViewSettings<VMQuestion>
        {
            Columns = new SxExtantions.SxGridViewColumn<VMQuestion>[]{
                new SxExtantions.SxGridViewColumn<VMQuestion>{FieldName="DateCreate", Caption="Дата"},
                new SxExtantions.SxGridViewColumn<VMQuestion>{FieldName="Name", Caption="Имя обратившегося"},
                new SxExtantions.SxGridViewColumn<VMQuestion>{FieldName="Email", Caption="Email"},
                new SxExtantions.SxGridViewColumn<VMQuestion>{FieldName="Phone", Caption="телефон"},
                new SxExtantions.SxGridViewColumn<VMQuestion>{FieldName="Text", Caption="Стоимость"}
            },
            EnableEditing = true,
            EditBtnTitle = x => { return "Смотреть"; },
            EditBtnCssClass = x => { return "fa fa-eye"; },
            EditRowUrl = x => { return Url.Action("Read", "Questions", new { id = x.Id }); },
            DataAjaxUrl = Url.Action("Index", "Questions"),
            ShowPagerInfo = true,
            RowCssClass = x => { return x.IsReaded ? null : "warning"; }
        }
    )